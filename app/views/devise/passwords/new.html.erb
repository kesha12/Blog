<div class="w3-container w3-theme" style="position:relative">
<span class="w3-opennav w3-xlarge" onclick="w3_open()">&#9776;</span>
 <h1 class="w3-jumbo w3-text-grey w3-text-shadow w3-animate-left">My Blog</h1>
</div>
<div class="w3-container w3-circle w3-black w3-center w3-card-4 w3-margin-64 w3-animate-right">

<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>